{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="mb-5">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}
    <a href="{{ path('task_create') }}" class="btn btn-success">Créer une nouvelle tâche</a>
    <a href="{{ path('task_list') }}" class="btn btn-primary mx-3">Consulter la liste des tâches</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('task_list_anonymous') }}" class="btn btn-secondary">Consulter la liste des tâches anonymes</a>
    {% endif %}
{% endblock %}
